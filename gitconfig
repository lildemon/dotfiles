[alias]
        st = status
        co = checkout
        ci = commit
        cim = commit -m
        ciam = commit -a -m
        br = branch
        lg = log --pretty=format:'[%h] [%ad] %s'
		graph = log --pretty=format:'%h %Cgreen %an: %Creset %s' --graph
        w = whatchanged
        diffc = diff --cached
	last = log -1 HEAD
	unstage = reset HEAD --

[merge]
    tool = extMerge
[mergetool "extMerge"]
    cmd = extMerge "$BASE" "$LOCAL" "$REMOTE" "$MERGED"
    trustExitCode = false
